<!DOCTYPE html>
<html>
  <head>
    <title>OnDemand</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    

  </head>


  <body>
  
 
  <header>
<nav class="navbar navbar-expand-lg navbar-light bg-light" style='padding-right:8%'>
  <a class="navbar-brand" href="#">Navbar</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item">
      <%= link_to "products", products_path,class: "nav-link"%>
    </li>
   

    </ul>
    <div class="float-right" >
    <ul class="navbar-nav mr-auto">
    <li class="nav-item">
    <%if user_signed_in?%>
    <li class="nav-item dropdown">
      <a class="nav-link dropdown-toggle" href="#" flip='true' id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <i class="material-icons">account_circle</i>
      </a>
      <div class="dropdown-menu" aria-labelledby="navbarDropdown">
      <%= link_to "manage your account ", edit_user_registration_path,class: "dropdown-item"%> 
      <div class="dropdown-divider"></div>
      <%= link_to "manage your products", new_tajir_registration_path,class: "dropdown-item"%>
      </div>
       </li>
     <li> <%= link_to "sign out ", destroy_user_session_path,method: 'delete',class: "nav-link"%></li>
<%elsif tajir_signed_in?%>
<li class="nav-item dropdown">
      <a class="nav-link dropdown-toggle" href="#" flip='true' id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <i class="material-icons">account_circle</i>
      </a>
      <div class="dropdown-menu" aria-labelledby="navbarDropdown">
      <%= link_to "manage your account ", new_user_registration_path,class: "dropdown-item"%> 
      <div class="dropdown-divider"></div>
      <%= link_to "manage your products", new_tajir_registration_path,class: "dropdown-item"%>
      </div>
       
<%= link_to "sign out", destroy_tajir_session_path ,method: 'delete',class: "nav-link"%>

<%else%>

<li class="nav-item dropdown">
      <a class="nav-link dropdown-toggle" href="#" flip='true' id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        register
      </a>
      <div class="dropdown-menu" aria-labelledby="navbarDropdown">
      <%= link_to "As a User ", new_user_registration_path,class: "dropdown-item"%> 
      <div class="dropdown-divider"></div>
      <%= link_to "As a Tajir", new_tajir_registration_path,class: "dropdown-item"%>
       
       
      </div>
<li class="nav-item dropdown">
      <a class="nav-link dropdown-toggle" href="#" flip='true' id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        sign in
      </a>
      <div class="dropdown-menu" aria-labelledby="navbarDropdown">
      <%= link_to "As a User ", new_user_session_path,class: "dropdown-item"%> 
      <div class="dropdown-divider"></div>
      <%= link_to "As a Tajir", new_tajir_session_path,class: "dropdown-item"%>
       
       
      </div>
    </li>
<%end%>
    </a>
    </li>
    </ul>   
    </div>
  </div>
</nav>
<div class='d-flex flex-row '>

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p> 
  </header>

 <script
  src="https://code.jquery.com/jquery-3.4.1.min.js"
  integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
  crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  <%= yield %>
  <footer>
  </footer>
  </body>
</html>
